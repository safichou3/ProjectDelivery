<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Dashboard{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" crossorigin="anonymous" />


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            user-select: none;
        }
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
</head>
<body>
{% if app.request.attributes.get('_route') not in ['app_login', 'app_register'] %}
    <header class="navbar navbar-expand-lg bg-white shadow-sm p-0">
    <a class="logo-wrapper navbar-brand col-md-2 me-0 text-center" href="#">
        {# <img class="logo" src="{{ asset('images/logo.svg') }}"> #}
    </a>

{#    <span class="position-relative" style="left:30px">#}
{#        <input class="form-control search-input" type="text" placeholder="Search anything here..." aria-label="Search">#}
{#        <span class="fa fa-search search-input-icon"></span>#}
{#    </span>#}

    <div class="navbar-nav ms-auto d-flex align-items-center px-3">
        {% if app.user %}
        <div class="dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="user-name me-2">{{ app.user.name }}</span>
                <i class="fas fa-chevron-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="{{ path('chef_profile') }}">Profile</a></li>
                <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
            </ul>
        </div>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Login</a>
        {% endif %}
    </div>


</header>
{% endif %}
<div class="mt-4">
    {% block body %}
        {% block content %}{% endblock %}
    {% endblock %}
</div>

<script src="{{ asset('js/custom.js') }}"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
